{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "declaration": true,
    "jsx": "react",
    "lib": ["es6", "dom"],
    "noEmit": true,
    "strict": true,
    "target": "es2017",
    "moduleResolution": "node",
    "baseUrl": "src"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "babel.config.js", "jest.config.js", "__tests__"]
}
